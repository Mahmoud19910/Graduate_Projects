<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layoutDirection="rtl"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/title_Blue_Color"
                android:textSize="16dp"
                android:text="تهانينا لك على هذا الانجاز "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/timer2_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الوقت المستغرق "
                    android:layout_marginStart="8dp"
                    style="@style/describtion_ShadowBlack_Color"/>

                <TextView
                    android:id="@+id/achivmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:03:53"
                    android:layout_marginStart="8dp"
                    style="@style/describtion_ShadowPink_Color"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fire2_department_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="السعرات الحرارية المحروقة"
                    android:layout_marginStart="8dp"
                    style="@style/describtion_ShadowBlack_Color"/>

                <TextView
                    android:id="@+id/caloriBurnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 سعرة"
                    android:layout_marginStart="8dp"
                    style="@style/describtion_ShadowPink_Color"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/details"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:gravity="center"
                android:background="@drawable/gradient_background_button">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اظهار كافة التفاصيل"
                    style="@style/title_White_Color"
                    android:textSize="10dp"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="23dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/imageTraining"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image"
            app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>