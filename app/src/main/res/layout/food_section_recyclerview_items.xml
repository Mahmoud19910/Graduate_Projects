<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_raduis_card2"
    android:layout_marginBottom="20dp"
    android:layoutDirection="rtl"
    android:gravity="center"
    android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/foodSection_iv_images"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:civ_border_color="#3A7FC0"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#525355"
        app:civ_shadow_radius="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/foodSection_tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="277 "
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="start|center"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" سعرة"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="start|center"
                android:textStyle="bold"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/foodSection_iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/add"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        >
        <TextView
            android:id="@+id/foodSection_tv_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التين "
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/foodSection_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 100 غرام"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:textStyle="bold"
            />

    </LinearLayout>




</LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>