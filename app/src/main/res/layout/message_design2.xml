<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/messageUsersImage"
        app:layout_constraintTop_toTopOf="parent">



            <LinearLayout
                android:id="@+id/childParentLayout"
                android:layout_width="match_parent"
                android:background="@drawable/grey_chat_background"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
              >

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="5dp"
                    style="@style/describtion_ShadowPink_Color"
                    android:text="Mahmoud Nassar"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/messageImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/messageTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Android charting application xml ui design tutorial with example. Android charting application xml ui design tutorial with example. Android charting application xml ui design tutorial with example. Android charting application xml ui design tutorial with example."
                    android:textColor="#000"
                    android:padding="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="9dp"
                    android:text="10:30 pm"
                    android:textColor="#000" />

            </LinearLayout>

    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/messageUsersImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border="true"
        app:civ_border_width="2dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>