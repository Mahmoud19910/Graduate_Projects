<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/corner_raduis_card2"
    android:layout_marginBottom="20dp"
    android:layoutDirection="rtl"
    android:gravity="start|center_vertical|center_horizontal"
    android:padding="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/doctorPhoto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:civ_border_color="#3A7FC0"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#525355"
        app:civ_shadow_radius="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعرات الحرارية"
            android:textSize="25dp"
            android:layout_weight="1"
            style="@style/describtion_ShadowPink_Color"
            android:gravity="start|center"
            android:textStyle="bold"
         />

        <TextView
            android:id="@+id/specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعرات الحرارية"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:textStyle="bold"
           />
    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>