<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".Fragments.Fragment_FreeGoal">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="100dp"
            android:padding="3dp"
            android:elevation="5dp"
            android:background="@drawable/corner_raduis_card_fill_topright_bottom_left">

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/freeGoalImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cornerRadius="25dp"
                app:roundedCorners="bottomLeft|topRight"
                android:src="@drawable/calori_card_photo"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/freeGoalStartBut"
            style="@style/default_Button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:text="بدء"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>