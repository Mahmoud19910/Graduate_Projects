<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gradu_Ptojects" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E32C83</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#E32C83</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_Fill_Color" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_fillcolor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/_50sdp</item>
    </style>

    <style name="button_OutLine_Color" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_outline_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:height">@dimen/_50sdp</item>
    </style>

    <style name="title_White_Color" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="title_Blue_Color" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3A7FC0</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="describtion_Black_Color" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#707070</item>
    </style>


    <style name="describtion_ShadowBlack_Color" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#707070</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="describtion_ShadowPink_Color" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#E32C83</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="edit_Text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#707070</item>
        <item name="android:background">@drawable/edit_text_shape</item>
    </style>

    <style name="default_Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/default_button</item>
    </style>
</resources>